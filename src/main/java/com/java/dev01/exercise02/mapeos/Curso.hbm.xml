<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping
        PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.java.dev01.exercise02.pojos.Curso" table="curso">
        <id name="codigo" type="string" column="chrCurCodigo">
            <generator class="assigned"/>
        </id>
        <property name="nombre" column="vchCurNombre" type="string"/>
        <property name="creditos" column="intCurCreditos" type="int"/>
    </class>
</hibernate-mapping>